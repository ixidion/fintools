    "version": "0.2.0",
    "configurations": [

        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'fintools'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=fintools",
                    "--package=fintools"
                ],
                "filter": {
                    "name": "fintools",
                    "kind": "bin"
                }
            },
            "args": [],
            "env": {
                "FINAPP__CACHE_FILE": "N:\\weekly_symbols\\cache\\symbol_cache.json",
                "FINAPP__OUTPUT_PATH": "N:\\weekly_symbols",
            },
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'fintools'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=fintools",
                    "--package=fintools"
                ],
                "filter": {
                    "name": "fintools",
                    "kind": "bin"
                }
            },
            "args": [],
            "env": {
                "FINAPP__CACHE_FILE": "N:\\weekly_symbols\\cache\\symbol_cache.json",
                "FINAPP__OUTPUT_PATH": "N:\\weekly_symbols",
                "FINAPP__OUTPUT_PATH_DIFF": "N:\\weekly_symbols\\diffs",
            },            
            "cwd": "${workspaceFolder}"
        }
    ]
}